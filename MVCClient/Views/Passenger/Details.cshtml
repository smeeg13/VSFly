@model MVCClient.Models.PassengerM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PassengerM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PassportID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PassportID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>


@if (ViewBag.Message != "Admin")
{

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PersonId }) |
    <a asp-action="Index">Back to Passenger Area</a>
</div>

}
else
{

<div>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.PersonId }) |*@
    @using (Html.BeginForm("Edit", "Passenger", new { id = @Html.ValueFor(model => model.PersonId) }))
    {
        <input type="button" value="Edit" class="btn btn-primary" style="margin-top:8x">
    }
    @using (Html.BeginForm("ChangeStatus", "Admin", new { id = @Html.ValueFor(model => model.PersonId), status = @Html.ValueFor(model => model.Status) }, FormMethod.Post))
    {
        <input type="submit" value="Change Status" class="btn btn-primary" style="margin-top:8x">
    }
    @using (Html.BeginForm("DeletePassenger", "Admin", new { id = @Html.ValueFor(model => model.PersonId) }, FormMethod.Get))
    {
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-top:8px">
    }




    <form>
        <input type="button" value="Go back" onclick="history.back()" style="margin-top:30px">
    </form>
</div>
}

