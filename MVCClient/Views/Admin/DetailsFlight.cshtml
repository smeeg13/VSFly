@model MVCClient.Models.FlightAdminM

@{
    ViewData["Title"] = "DetailsFlight";
}

<h2> Flight Information</h2>

<div>
    <h4>FlightAdminM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalePrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SumSales)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SumSales)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AirlineName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirlineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FreeSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FreeSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PilotId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PilotId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CopilotId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CopilotId)
        </dd>
    </dl>
</div>



@if (ViewBag.Message == "Admin")
{

    <div>

        @using (Html.BeginForm("EditFlight", "Admin", new { id = @Html.ValueFor(model => model.FlightNo) }, FormMethod.Get))
        {
            <input type="submit" value="Edit" class="btn btn-primary" style="margin-right:30px">
        }
        @using (Html.BeginForm("DeleteFlight", "Admin", new { id = @Html.ValueFor(model => model.FlightNo) }, FormMethod.Get))
        {
            <input type="submit" value="Delete" class="btn btn-danger" style="margin-right:30px">
        }

    </div>


    <h6>Tickets Already Sold this flight : </h6>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().FlightNo)
                </th>
                <th>
                    Full Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().SalePrice)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tickets)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalePrice)
                    </td>

                    <td>


                        {@Html.ActionLink("Details Ticket", "Details", "Booking", new { flightNo = item.FlightNo, personId = item.PassengerId })


                    </td>
                </tr>
            }
        </tbody>
    </table>
}



<form>
    <input type="button" value="Go back" onclick="history.back()" style="margin-top:30px">
</form>


