@model MVCClient.Models.Destination

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Destination : <b>@Html.ValueFor(model => model.DestinationName)</b></h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Sum of tickets sold for @Html.ValueFor(model => model.DestinationName) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SumSales)
        </dd>
        <dt class="col-sm-2">
            Average Price of a ticket for @Html.ValueFor(model => model.DestinationName) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvgSales)
        </dd>
    </dl>
</div>
<br />
<h6>Flights available for : <b>@Html.ValueFor(model => model.DestinationName)</b></h6>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flights.FirstOrDefault().FlightNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flights.FirstOrDefault().Date)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Flights)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td>

                    @if (ViewBag.Session == "Admin")
                    {

                        @Html.ActionLink("Details Admin", "DetailsFlight", "Admin", new { id = item.FlightNo })

                    }
                    else
                    @Html.ActionLink("Details", "BaseDetails", "Flight", new { id = item.FlightNo })


                }


                </td>
            </tr>
        }
    </tbody>
</table>


<br />
@if (ViewBag.Session == "Admin")
{

    <h6>Tickets Already Sold for : <b>@Html.ValueFor(model => model.DestinationName)</b></h6>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TicketsSold.FirstOrDefault().FlightNo)
                </th>
                <th>
                    Full Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketsSold.FirstOrDefault().SalePrice)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TicketsSold)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalePrice)
                    </td>

                    <td>


                        {@Html.ActionLink("Details Ticket", "Details", "Booking", new { flightNo = item.FlightNo, personId = item.PassengerId })


                    </td>
                </tr>
            }
        </tbody>
    </table>

}

<br />
<form>
    <input type="button" value="Go back" onclick="history.back()">
</form>