@model MVCClient.Models.BookFlight

@{
    ViewData["Title"] = "ConfirmBooking";
}

<h1>Your Booking Has Been Made</h1>
<hr />
<h6>Have a good Trip ;)</h6>
<br />
<div>
    <h4>
        Flight Information :
    </h4>
    <hr />


    <dl class="row">

        <dt class="col-sm-2">
            Flight Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt class="col-sm-2">
            Final Price :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.SalePrice)
        </dd>

    </dl>
    <br />
    <h4>
        Passenger Information :
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passenger.FullName)
        </dd>
        <dt class="col-sm-2">
            Passport ID :
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passenger.PassportID)
        </dd>
        <dt class="col-sm-2">
            Email :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passenger.Email)
        </dd>
        <dt class="col-sm-2">
            Birthday :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passenger.Birthday)
        </dd>
    </dl>
</div>


<div>
    @Html.ActionLink("Book for someone else", "Details", "Flight", new { id = Model.FlightNo }) |
    <a asp-action="Index" asp-controller="Home">Back Home</a>
</div