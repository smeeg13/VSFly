    /* Create two unequal columns that floats next to each other */
    /* Left column */
    .leftColumn {
        float: left;
        width: 40%;
      
    }
    /* Right column */
    .middleColumn {
        float: left;
        width: 20%;
    }

    /* Right column */
    .rightColumn {
        float: left;
        width: 40%;
    }
    

    /* Clear floats after the columns */
