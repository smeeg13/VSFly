@model MVCClient.Models.BookFlight

@{
    ViewData["Title"] = "Details";
}

<h1>Flight : @Html.DisplayFor(model => model.Departure) -  @Html.DisplayFor(model => model.Destination)</h1>

<div>
    <br />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt class="col-sm-2">
            Sale Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalePrice)
        </dd>
    </dl>
    <hr />
    @using (Html.BeginForm("Details", "Flight", FormMethod.Post))
    {
        <label for="NbPassengers">
            Number of Passenger :
            <input type="number" name="NbPassengers" id="NbPassengers"
                   min="1" max="6" value="@Html.DisplayFor(model => model.NbPassengers)">

        </label>

        <input class="filterButton" type="submit" value="Refresh" />
    }

    <hr />

    @for (int i = 0; i < Model.Passengers.Count; i++)
    {
        <div>
            <h6>Enter Personnal Information of Passenger @Html.Value(i.ToString())</h6>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="Passengers.ElementAt(i).FullName" class="control-label">Full Name</label>
            <input asp-for="Passengers.ElementAt(i).FullName" class="form-control" />
            <span asp-validation-for="Passengers.ElementAt(i).FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Passengers.ElementAt(i).PassportID" class="control-label">Passport ID</label>
            <input asp-for="Passengers.ElementAt(i).PassportID" class="form-control" />
            <span asp-validation-for="Passengers.ElementAt(i).PassportID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Passengers.ElementAt(i).Email" class="control-label"></label>
            <input asp-for="Passengers.ElementAt(i).Email" class="form-control" />
            <span asp-validation-for="Passengers.ElementAt(i).Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Passengers.ElementAt(i).Birthday" class="control-label"> </label>
            <input asp-for="Passengers.ElementAt(i).Birthday" class="form-control" />
            <span asp-validation-for="Passengers.ElementAt(i).Birthday" class="text-danger"></span>
        </div>
        <br />

    }


</div>

