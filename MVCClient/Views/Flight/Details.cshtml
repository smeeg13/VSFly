@model MVCClient.Models.BookFlight

@{
    ViewData["Title"] = "Details";
}

<h1>Flight : @Html.DisplayFor(model => model.Departure) -  @Html.DisplayFor(model => model.Destination)</h1>

<div>
    <br />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Sale Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalePrice)
        </dd>
    </dl>
  

    <hr />

    
    <form asp-action="BookFlight" asp-controller="Flight">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FlightNo" class="control-label" hidden></label>
            <input asp-for="FlightNo" class="form-control" hidden value="@Html.ValueFor(model => model.FlightNo)"/>
            <span asp-validation-for="FlightNo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SalePrice" class="control-label" hidden></label>
            <input asp-for="SalePrice" class="form-control" hidden value="@Html.ValueFor(model => model.SalePrice)"/>
            <span asp-validation-for="SalePrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label" hidden></label>
            <input asp-for="Price" class="form-control" hidden value="@Html.ValueFor(model => model.Price)"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NbPassengers" class="control-label" hidden></label>
            <input asp-for="NbPassengers" class="form-control" hidden value="@Html.ValueFor(model => model.NbPassengers)"/>
            <span asp-validation-for="NbPassengers" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label" hidden></label>
            <input asp-for="Date" type="datetime" class="form-control" hidden value="@Html.ValueFor(model => model.Date)" />
        </div>
        <div class="form-group">
            <label asp-for="Departure" class="control-label" hidden></label>
            <input asp-for="Departure" class="form-control" hidden value="@Html.ValueFor(model => model.Departure)"/>
            <span asp-validation-for="Departure" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Destination" class="control-label" hidden></label>
            <input asp-for="Destination" class="form-control" hidden value="@Html.ValueFor(model => model.Destination)"/>
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
    
            <div>
                <h6>Enter Personnal Information of Passenger :</h6>
            </div>

            <div class="form-group">
                <label asp-for="FullName" class="control-label">Full Name</label>
                <input asp-for="FullName" class="form-control"  type="text"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportID" class="control-label">Passport ID</label>
                <input asp-for="PassportID" class="form-control"  type="text"/>
                <span asp-validation-for="PassportID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"  type="email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"> </label>
                <input asp-for="Birthday"  type="datetime-local"   class="form-control" placeholder="@DateTime.Now"/>
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <br />

        <div class="form-group">
            <input type="submit" value="Book the Flight" class="btn btn-primary" />
        </div>
    </form>
</div>

<hr />
<div>
 
    <a asp-action="Index" asp-controller="Home">Back Home</a>
</div>
