@model IEnumerable<MVCClient.Models.FlightM>

@{
    ViewData["Title"] = "Index";
}

<h2>Flights Available</h2>

<!--<p>-->
    @*<a asp-action="Create">Create New</a>*@
<!--</p>-->
<div class="row">
    <div class="fullcolumn">
        <div class="card">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <b> <p class="tilteFiltre">Filter the flights : </p></b>
                <p class="selects">
                    Enter Departure : <input type="text" name="searchDeparture" />

                    Enter Destination : <input type="text" name="searchDestination" />
                </p><p>
                </p>
                <input class="filterButton" type="submit" value="Search" />

            }
        </div>
       
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.SalePrice)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
               
                <th>
                    @Html.DisplayFor(modelItem => item.SalePrice)
                </th>
                <td>

                    @Html.ActionLink("Book this Flight", "Details", "Flight", new { id = item.FlightNo })
                </td>
            </tr>
        }
    </tbody>
</table>


<style>
    .selects {
        margin-top: 10px;
        margin-right: 10px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .tilteFiltre {
        margin-right: 10px;
        margin-left: 10px;
    }

    .fullcolumn {
        padding: 10px;
        float: left;
        width: 100%;
    }
    /* Add a card effect for articles */
    .card {
        background-color: #f5f5f5;
        padding: 20px;
        margin-top: 20px;
    }

    .filterButton {
        margin: 14px;
    }
</style>